<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="create.locations.table" author="emils.seflers">
        <createTable tableName="locations">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(7,4)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DECIMAL(7,4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.weather_info.table" author="emils.seflers">
        <createTable tableName="weather_info">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="location_id" type="INTEGER">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_weather_info_location_id"
                        referencedTableName="locations"
                        referencedColumnNames="id"
                />
            </column>
            <column name="temperature" type="DECIMAL(3,1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.timestamp.column.weather_info.table" author="emils.seflers">
        <addColumn tableName="weather_info">
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>